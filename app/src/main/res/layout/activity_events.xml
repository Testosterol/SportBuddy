<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.dtrebula.bbc2.LoginActivity"
    android:background="@drawable/background">

    <Button
        android:id="@+id/showEvents_button"
        android:background="@layout/buttonshape"
        android:text="Show all events"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_width="170dp"
        android:layout_height="28dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnShowMyOwn"
        android:layout_alignStart="@+id/btnShowMyOwn" />

    <Button
        android:id="@+id/btnShowMyOwn"
        android:background="@layout/buttonshape"
        android:text="Show My events"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_width="170dp"
        android:layout_height="28dp"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/createEvent_button"
        android:layout_alignLeft="@+id/createEvent_button"
        android:layout_alignStart="@+id/createEvent_button" />

    <Button
        android:id="@+id/backEvents_button"
        android:background="@layout/buttonshape"
        android:text="Back"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_height="28dp"
        android:layout_width="170dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/showEvents_button"
        android:layout_alignLeft="@+id/btnShowMyOwn"
        android:layout_alignStart="@+id/btnShowMyOwn" />

    <Button
        android:id="@+id/createEvent_button"
        android:background="@layout/buttonshape"
        android:text="Create event"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_height="28dp"
        android:layout_width="170dp"
        android:layout_above="@+id/showEvents_button"
        android:layout_marginBottom="14dp" />

    <ImageView
        android:id="@+id/imageView1"

        android:src="@drawable/logo"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/createEvent_button"
        android:layout_alignEnd="@+id/createEvent_button"
        android:layout_width="350dp"
        android:layout_height="100dp" />

</RelativeLayout>