<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.dtrebula.bbc2.LoginActivity"
    android:background="@drawable/background"
    android:weightSum="2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="0.54"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/imageView1"

            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_weight="1"
            android:layout_width="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/helpEmail_helplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/sendEmail_button"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:background="@layout/buttonshape"
        android:text="Send"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/sendHelp_text"
        android:layout_alignLeft="@+id/backHelp_button"
        android:layout_alignStart="@+id/backHelp_button" />

    <Button
        android:id="@+id/backHelp_button"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:background="@layout/buttonshape"
        android:text="Back"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_below="@+id/sendEmail_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/sendHelp_text"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:hint="Here you can write any questions"
        android:inputType="textMultiLine"
        android:layout_weight="1.08"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="300dp" />

</RelativeLayout>