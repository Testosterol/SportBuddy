<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"

    tools:context="com.example.dtrebula.bbc2.LoginActivity"
    android:background="@drawable/background"
    android:weightSum="2">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="153dp"
        android:layout_height="138dp"
        android:layout_weight="2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">
    </ImageView>

    <TextView

        android:id="@+id/image_button"
        android:background="@drawable/background"
        android:text="Select Image"
        android:layout_height="31dp"
        android:elevation="0dp"
        tools:layout_width="wrap_content"
        android:layout_weight="0.20"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/imageView1" />
    <TextView

        android:id="@+id/defaultImage_button"
        android:background="@drawable/background"
        android:text="Set default image"
        android:layout_height="31dp"
        android:elevation="0dp"
        tools:layout_width="wrap_content"
        android:layout_weight="0.20"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/imageView1" />

    <EditText
        android:id="@+id/fullname_profile"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:inputType="textMultiLine"
        android:textStyle="bold"
        android:singleLine="true"
        android:layout_below="@+id/image_button"
        android:layout_alignLeft="@+id/age_profile"
        android:layout_alignStart="@+id/age_profile"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent" />

    <EditText
        android:id="@+id/weight_profile"
        android:hint="Weight"
        android:inputType="textMultiLine"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="40dp"
        android:layout_below="@+id/age_profile"
        android:layout_alignLeft="@+id/height_profile"
        android:layout_alignStart="@+id/height_profile" />

    <EditText
        android:id="@+id/height_profile"
        android:hint="Height"
        android:inputType="textMultiLine"
        android:singleLine="true"
        android:layout_weight="1.69"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_below="@+id/weight_profile" />

    <EditText
        android:id="@+id/age_profile"
        android:hint="Age"
        android:inputType="textMultiLine"
        android:singleLine="true"
        android:layout_weight="0.49"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_below="@+id/fullname_profile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/sports_profile"
        android:layout_width="match_parent"
        android:hint="Sports close to you"
        android:inputType="textMultiLine"
        android:singleLine="true"
        android:layout_weight="1"
        android:layout_height="90dp"
        android:textStyle="bold"
        android:layout_below="@+id/height_profile"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/save_button"
        android:background="@layout/buttonshape"
        android:text="Save"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_width="150dp"
        android:layout_height="28dp"
        android:elevation="0dp"
        android:layout_alignTop="@+id/back_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button


        android:id="@+id/back_button"
        android:text="Back"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_weight="0.37"
        android:background="@layout/buttonshape"
        android:layout_width="150dp"
        android:layout_height="28dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/sports_profile"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</LinearLayout>
